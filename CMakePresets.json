{
    "version": 3,
    "configurePresets": [
        {
            "name": "Base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "Release",
            "inherits":[ "Base" ],
            "cacheVariables":{
                "CMAKE BUILD TYPE": "Release",
                "TARGET_SOURCE": "Desktop"
            }
        },
        {
            "name": "Debug",
            "inherits":[ "Base" ],
            "cacheVariables":{
                "CMAKE BUILD TYPE": "Debug",
                "TARGET_SOURCE": "Desktop"
            }
        }
    ]
}
